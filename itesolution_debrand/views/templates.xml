<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="my_layout" inherit_id="web.layout" name="MY layout" priority="17">
		<xpath expr="//head/title" position="replace">
	  		<title t-esc="title or 'ITeSolution Software Services'"/>
		</xpath>
		<xpath expr="//head/link" position="replace">
	  		<link type="image/x-icon" rel="shortcut icon" t-att-href="x_icon or '/itesolution_debrand/static/src/img/favicon.ico'"/>
		</xpath>
	</template>

	<template id="my_discuss_public_layout" inherit_id="mail.public_layout">
		<xpath expr="//title" position="replace">
	  		<title t-esc="title or 'ITeSolution Software Services'"/>
		</xpath>
<!--		<xpath expr="//link[@type='image/x-icon']" position="replace">-->
<!--	  		<link type="image/x-icon" rel="shortcut icon" t-att-href="x_icon or '/itesolution_debrand/static/src/img/favicon.ico'"/>-->
<!--		</xpath>-->
	</template>

	<template id="my_portal_record_sidebar" inherit_id="portal.portal_record_sidebar">
		<xpath expr="//div/div/div[2]" position="replace">
			<div class="card-footer small text-center text-muted border-top-0 pt-1 pb-1 d-none d-lg-block">
                Powered by <a target="_blank" href="https://www.itesolution.co.in" title="ITeSolution Software Services">ITeSolution Software Services</a>
            </div>
		</xpath>
	</template>

</odoo>