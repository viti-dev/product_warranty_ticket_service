<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Inherit Lot/Serial form -->
  <record id="view_production_lot_form_inherit_warranty" model="ir.ui.view">
    <field name="name">stock.production.lot.form.inherit.warranty</field>
    <field name="model">stock.lot</field>
    <field name="inherit_id" ref="stock.view_production_lot_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='description']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
      <sheet position="inside">
        <group string="Customer &amp; Warranty Information" colspan="4">
          <group>
            <field name="customer_id" options="{'no_create_edit': True}"/>
            <field name="customer_email" readonly="1"/>
            <field name="customer_phone" readonly="1"/>
          </group>
          <group>
            <field name="warranty_period" placeholder="e.g. 12"/>
            <field name="warranty_start_date"/>
            <field name="warranty_end_date" readonly="1"/>
          </group>
        </group>
      </sheet>
    </field>
  </record>
  <record id="view_stock_lot_tree_inherit_custom" model="ir.ui.view">
        <field name="name">stock.lot.tree.inherit.custom</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <!-- Example: Add fields at the end of the tree -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="customer_id" />
                
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="warranty_period" width="120"/>
                 <field name="warranty_start_date" width="130"/>
                  <field name="warranty_end_date" width="120"/>
                
            </xpath>
        </field>
    </record>  
</odoo>
