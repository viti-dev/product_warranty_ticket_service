<odoo>
    <record id="view_helpdesk_ticket_form_inherit_serial" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit.serial</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">

             <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        
            <xpath expr="//field[@name='tag_ids']" position="replace"/>
            <xpath expr="//page[@name='description']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="after">
                <field name="serial_number" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="product_id" readonly="1"/>
                <field name="product_description" readonly="1"/>
            </xpath>
         
      <xpath expr="//sheet/notebook" position="inside">
                <page string="Warranty">
                    <group>
                        <field name="warranty_period" readonly="1"/>
                        <field name="warranty_start_date" readonly="1"/>
                        <field name="warranty_end_date" readonly="1"/>
                    </group>
                </page>
            </xpath>
            <field name="partner_id" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <field name="email_cc" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <field name="partner_phone" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            

      <!-- Add buttons in header -->
      <!-- <xpath expr="//header" position="inside">
        <button name="action_create_fsm_order" type="object" string="Create Service Order" class="oe_highlight"/>
        <button name="action_open_fsm_orders" type="object" string="Open Service Orders"/>
      </xpath> -->
       <!-- Smart button for FSM orders -->
      <!-- <xpath expr="//sheet//div[@class='oe_button_box']" position="inside">
        <button type="object" class="oe_stat_button" name="action_open_fsm_orders" icon="fa-wrench">
          <field name="fsm_order_count" widget="statinfo" string="Service Orders"/>
        </button>
      </xpath> -->
        </field>
    </record>
</odoo>
